{
    "settings" :
    {
        "number_of_shards" : 1,
        "number_of_replicas" : 1,
        "auto_expand_replicas" : "0-all",
        "analysis" :
        {
            "analyzer" :
            {
                "en" :
                {
                    "type" : "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "en_stemmer", "lowercase", "stop", "porter_stem", "asciifolding", "remove_accents"]
                }
            },
            "filter" :
            {
                "en_stemmer" : {
                    "type" : "stemmer",
                    "name" : "possessive_english"
                },
                "remove_accents" : {
                    "type" : "pattern_replace",
                    "pattern" : "[`'Ê¿]",
                    "replace" : ""
                }
            }
        }
    },
    "mappings" :
    {
        "en" : {
            "_source" : {
                "enabled" : true
            },
            "_all" : {
                "enabled" : false
            },
            "properties" : {
                "text" : {
                    "type" : "string",
                    "store" : true,
                    "index" : "analyzed",
                    "analyzer" : "en"
                },
                "author" : {
                    "type" : "string",
                    "index" : "not_analyzed",
                    "store" : true
                },
                "title" : {
                    "type" : "string",
                    "index" : "not_analyzed",
                    "store" : true
                },
                "section_title" : {
                    "type" : "string",
                    "index" : "not_analyzed",
                    "store" : true
                },
                "section_index" : {
                    "type" : "integer",
                    "index" : "not_analyzed",
                    "store" : true
                },
                "index" : {
                    "type" : "integer",
                    "index" : "not_analyzed",
                    "store" : true
                }
            }
        }
    }
}
